@model WebApp.Models.Producto


@{
    ViewData["Title"] = "Creacion de Equipos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card text-center">
    <div class="card-header">
        Creacion de Productos
    </div>
    <div class="card-body">
        <a asp-action="Index"
           class="btn btn-outline-primary"><i class="fa-solid fa-user-plus me-2"></i>Volver al Listado de Productos</a>
    </div>
</div>
<div class="row mt-3">
    <div class="row">
        <form class="row justify-content-evenly" asp-action="CrearProducto" method="post" enctype="multipart/form-data">



            <div class="col-md-3">
                <div class="form-group m-2">
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre Producto" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group m-2">
                    <input asp-for="DescripcionLarga" class="form-control" placeholder="Descripcion" />
                    <span asp-validation-for="DescripcionLarga" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group form-check m-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="UVRayos" /> UV RAYOS
                    </label>
                </div>
                <div class="form-group form-check m-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="UVNORayos" /> SIN UV RAYOS
                    </label>
                </div>
            </div>



            <div class="col-md-3">
                <div class="mb-3">
                    <label for="formFile" class="form-label">Imagen Produto</label>
                    <input class="form-control" asp-for="ImagenFile" id="formFile">
                </div>

                <div class="form-group m-2">
                    <label class="control-label">Marca</label>
                    <select asp-for="MarcaId" class="form-select" asp-items="ViewBag.Marcas"></select>
                </div>
                <div class="form-group m-2">
                    <label class="control-label">Tipo</label>
                    <select asp-for="TipoId" class="form-select" asp-items="ViewBag.Tipos"></select>
                </div>
                <div class="form-group m-2">
                    <label class="control-label">Sucursales</label>
                    <select asp-for="SucursalId" class="form-select" asp-items="ViewBag.Sucursales"></select>
                </div>
                <div class="form-group m-2">
                    <label class="control-label">Categoria</label>
                    <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias"></select>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Crear Producto" class="btn btn-primary col-12" />
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
