@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">

    <div class="row mt-2">

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-copyright" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Marcas</h5>
                    <p class="card-text">Crea, Edita o Elimina Marcas de empresas Especializadas en material Industrial!</p>
                    <a asp-controller="Marcas" asp-action="Index"
                       class="btn btn-success col-12">Ir a la Administracion</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-list" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Categorias</h5>
                    <p class="card-text">Crea, Edita o Elimina Categorias de productos Agricolas e industriales!</p>
                    <a asp-controller="Categorias" asp-action="Index"
                       class="btn btn-success col-12">Ir a la Administracion</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-list" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Sucursal</h5>
                    <p class="card-text">Crea, Edita o Elimina Sucursales en el Sistema para la administracion y gestion de Locales!</p>
                    <a asp-controller="Sucursal" asp-action="Index"
                       class="btn btn-success col-12">Ir a la Administracion</a>
                </div>
            </div>
        </div>



        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-users-line" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Tipos de materiales</h5>
                    <p class="card-text">Crea, Edita o Elimina Materiales en el Sistema para la administracion y gestion de Productos industriales!</p>
                    <a asp-controller="Tipo" asp-action="Index"
                       class="btn btn-primary col-12">Ir a la Administracion</a>
                </div>
            </div>
        </div>

    </div>
    <div class="row mt-2">

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-laptop" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Productos</h5>
                    <p class="card-text">Gestion de Productos Deportivos!</p>
                    <a asp-controller="Producto" asp-action="Index"
                       class="btn btn-primary col-12">Ir a la Administracion</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-user-gear" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Administracion de Usuarios</h5>
                    <p class="card-text">Crea, edita o elimina nuevos Usuarios del Sistema</p>
                    <a asp-controller="Usuarios" asp-action="Index"
                       class="btn btn-warning col-12">Ir a la Administracion</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card p-3">
                <i class="fa-solid fa-right-from-bracket" style="font-size:5rem;"></i>
                <div class="card-body">
                    <h5 class="card-title">Salir</h5>
                    <p class="card-text">Cerrar la Session Activa</p>
                    <a asp-controller="Usuarios" asp-action="Index"
                       class="btn btn-danger col-12">Log Out</a>
                </div>
            </div>
        </div>

    </div>
</div>
